    @using (@Html.BeginForm("Cadastrar", "JustificativadePonto", FormMethod.Post))
    {
        <div class="col-lg-1"> </div>
        <div class="col-lg-10">

            <div class="row">

                <div class="panel panel-primary">
                    <div class="panel-heading">Colaborador</div>
                    <div class="panel-body">
                        <div class="col-lg-2">
                            @Html.LabelFor(Justificativa => Justificativa.DataOcorrencia)
                            @Html.TextBoxFor(Justificativa => Justificativa.DataOcorrencia, new { @class = "form-control" })
                        </div>
                        <div class="col-lg-3">
                            @Html.LabelFor(Justificativa => Justificativa.NomeColaborador)
                            @Html.TextBoxFor(Justificativa => Justificativa.NomeColaborador, new { @class = "form-control" })
                        </div>
                    </div>

                </div>

            </div>
            <br />

            <div class="row">
                <div class="panel panel-primary">
                    <div class="panel-heading">Motivo</div>
                    <div class="panel-body">

                        <div class="row">
                            <div class="col-lg-4">

                                @Html.CheckBox("Pessoal", new { @class = "Form-control", }) Pessoal

                            </div>
                        </div>
                        <div class="row">


                            <div class="col-lg-4">

                                @Html.CheckBox("Pessoal", new { @class = "Form-control", }) Problema Técnico no ponto eletronico

                            </div>
                        </div>
                        <div class="row">


                            <div class="col-lg-4">

                                @Html.CheckBox("Pessoal", new { @class = "Form-control", }) Atestado médico

                            </div>
                        </div>
                        <div class="row">


                            <div class="col-lg-4">

                                @Html.CheckBox("Pessoal", new { @class = "Form-control", }) Serviços Externos

                            </div>
                        </div>
                        <div class="row">


                            <div class="col-lg-4">

                                @Html.CheckBox("Pessoal", new { @class = "Form-control", }) Visita Para Captação de Clientes

                            </div>
                        </div>
                        <div class="row">


                            <div class="col-lg-4">

                                @Html.CheckBox("Pessoal", new { @class = "Form-control", }) Reunião e Cursos

                            </div>
                        </div>
                    </div>
                </div>



            </div>
            <br />
            <div class="row">
                <div class="panel panel-primary">
                    <div class="panel-heading">Justificativa</div>
                    <div class="panel-body">

                        <div class="row">

                            <div class="col-lg-10">

                                @Html.TextAreaFor(Justificativa => Justificativa.DescJustificativa, new { @class = "Form-control", rows = 4, cols = 200 })

                            </div>
                        </div>

                    </div>
                </div>
            </div>




            <br />

            <div class="row">
                <div class="panel panel-primary">
                    <div class="panel-heading">Abonado ?</div>
                    <div class="panel-body">

                        <div class="row">

                            <div class="col-lg-10">

                                @Html.CheckBox("Abono", new { @class = "Form-control" }) Sim

                            </div>
                        </div>
                        <div class="row">

                            <div class="col-lg-10">

                                @Html.CheckBox("Abono", new { @class = "Form-control" }) Não

                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="panel panel-primary">
                    <div class="panel-heading">Arquivo</div>
                    <div class="panel-body">

                        <div class="row">

                            <div class="col-lg-2">

                                <input type="file" class="form-control" />

                            </div>
                        </div>
                        <br />

                        <div class="row">

                            <div class="col-lg-2">

                                <input type="submit" class="btn-primary btn-lg" value="Cadastrar" />

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>



    }

























