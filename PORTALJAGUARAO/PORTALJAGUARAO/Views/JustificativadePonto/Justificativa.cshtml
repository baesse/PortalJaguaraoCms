@using PORTALJAGUARAO.Models;

@model Justificativa



@{
    ViewBag.Title = "Justificativa";
}

<body>
    <div class="jumbotron">

        <p class="lead"><h1>Justificativa de Ponto</h1></p>

    </div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Cadastro de funcionario", "Cadastro", "Portal")</li>
                    <li>@Html.ActionLink("Férias", "Login", "Home")</li>
                    <li>@Html.ActionLink("Exames periodicos", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Comprovantes de pagamento", "Contact", "Home")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Documentos internos
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Pops", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Codigo de etica", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Codigo de conduta", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Organograma", "Contact", "Home")</li>
                        </ul>
                    </li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    @using (@Html.BeginForm("Cadastrar", "JustificativadePonto", FormMethod.Post))
    {


        <div class="row">

            <div class="panel panel-primary">
                <div class="panel-heading">Colaborador</div>
                <div class="panel-body">
                    <div class="col-lg-2">
                        @Html.LabelFor(Justificativa => Justificativa.DataOcorrencia)
                        @Html.TextBoxFor(Justificativa => Justificativa.DataOcorrencia, new { @class = "form-control" })
                    </div>
                    <div class="col-lg-3">
                        @Html.LabelFor(Justificativa => Justificativa.NomeColaborador)
                        @Html.TextBoxFor(Justificativa => Justificativa.NomeColaborador, new { @class = "form-control" })
                    </div>
                </div>

            </div>

        </div>
        <br />

        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">Motivo</div>
                <div class="panel-body">

                    <div class="row">
                        <div class="col-lg-4">

                            @Html.CheckBox("Pessoal", new { @class = "Form-control", }) Pessoal

                        </div>
                    </div>
                    <div class="row">


                        <div class="col-lg-4">

                            @Html.CheckBox("Pessoal", new { @class = "Form-control", }) Problema Técnico no ponto eletronico

                        </div>
                    </div>
                    <div class="row">


                        <div class="col-lg-4">

                            @Html.CheckBox("Pessoal", new { @class = "Form-control", }) Atestado médico

                        </div>
                    </div>
                    <div class="row">


                        <div class="col-lg-4">

                            @Html.CheckBox("Pessoal", new { @class = "Form-control", }) Serviços Externos

                        </div>
                    </div>
                    <div class="row">


                        <div class="col-lg-4">

                            @Html.CheckBox("Pessoal", new { @class = "Form-control", }) Visita Para Captação de Clientes

                        </div>
                    </div>
                    <div class="row">


                        <div class="col-lg-4">

                            @Html.CheckBox("Pessoal", new { @class = "Form-control", }) Reunião e Cursos

                        </div>
                    </div>
                </div>
            </div>



        </div>
        <br />
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">Justificativa</div>
                <div class="panel-body">

                    <div class="row">

                        <div class="col-lg-12">

                            @Html.TextAreaFor(Justificativa => Justificativa.DescJustificativa, new { @class = "Form-control", rows = 4, cols = 200 })

                        </div>
                    </div>

                </div>
            </div>
        </div>




        <br />

        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">Abonado ?</div>
                <div class="panel-body">

                    <div class="row">

                        <div class="col-lg-12">

                            @Html.CheckBox("Abono", new { @class = "Form-control"}) Sim

                        </div>
                    </div>
                    <div class="row">

                        <div class="col-lg-12">

                            @Html.CheckBox("Abono", new { @class = "Form-control" }) Não

                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">Arquivo</div>
                <div class="panel-body">

                    <div class="row">

                        <div class="col-lg-12">

                           <input type="file" class="form-control" />

                        </div>
                    </div>
                    <br />

                    <div class="row">

                        <div class="col-lg-12">

                            <input type="submit" class="btn-primary btn-lg"   value="Cadastrar"/>

                        </div>
                    </div>
                   
                </div>
            </div>
        </div>


    }



























</body>