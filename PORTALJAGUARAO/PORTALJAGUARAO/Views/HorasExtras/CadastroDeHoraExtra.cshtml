@using PORTALJAGUARAO.Models;

@model HoraExtra 


@{
    ViewBag.Title = "CadastroDeHoraExtra";
}



<body>
    @section Scripts {
        <script>
        $(document).ready(function ()
        {
            $("#telefone").inputmask("mask", { "mask": "(99) 9999-99999" });
            $("#celular").inputmask("mask", { "mask": "(99) 99999-99999" });
            $("#cpf").inputmask("mask", { "mask": "999.999.999-99" }, { reverse: true });
            $("#cpf1").inputmask("mask", { "mask": "999.999.999-99" }, { reverse: true });
            $("#cep").inputmask("mask", { "mask": "99999-999" });
            $("#nascimento").inputmask("mask", { "mask": "99/99/9999" });
            $("#nascimento1").inputmask("mask", { "mask": "99/99/9999" });
            $("#nascimento2").inputmask("mask", { "mask": "99/99/9999" });
            $("#nascimento3").inputmask("mask", { "mask": "99/99/9999" });
            $("#nascimento4").inputmask("mask", { "mask": "99/99/9999" });
            $("#preco").inputmask("mask", { "mask": "999.999,99" }, { reverse: true });
            $("#valor").inputmask("mask", { "mask": "#.##9,99" }, { reverse: true });
            $("#ip").inputmask("mask", { "mask": "999.999.999.999" });
    });
        </script>
    }

    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="~/Content/IMG/imagem 1.PNG" alt="...">

                    </div>
                    <div class="item">
                        <img src="~/Content/IMG/imagem 1.PNG" alt="...">
                        <div class="carousel-caption">
                            ...
                        </div>
                    </div>
                    ...
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>




    @using (@Html.BeginForm("", "", ""))
    {
        <br />
        <br />
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">Conjuge</div>
                <div class="panel-body">

                    <div class="row">

                        <div class="col-lg-4">

                            @{List<SelectListItem> NomeFuncionarios = new List<SelectListItem>();

                                NomeFuncionarios.Add(new SelectListItem
                                {

                                    Value = "Igor Baesse",
                                    Text = "Igor Baesse",
                                });


                            }


                            @Html.LabelFor(HoraExtra => HoraExtra.NomeColaborador)
                            @Html.DropDownListFor(HoraExtra => HoraExtra.NomeColaborador, NomeFuncionarios, "Selecione", new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <div class="row">

                        <div class="col-lg-2">
                            @Html.LabelFor(HoraExtra=>HoraExtra.DataHoraExtra)
                            @Html.TextBoxFor(HoraExtra => HoraExtra.DataHoraExtra, new { @class = "form-control" })
                        </div>
                        <div class="col-lg-2">
                            @Html.LabelFor(HoraExtra => HoraExtra.PrimeiraEntrada)
                            @Html.TextBoxFor(HoraExtra => HoraExtra.SegundaEntrada, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="row">

                        <div class="col-lg-2">
                            @Html.LabelFor(HoraExtra => HoraExtra.SegundaEntrada)
                            @Html.TextBoxFor(HoraExtra => HoraExtra.SegundaEntrada, new { @class = "form-control" })
                        </div>
                        <div class="col-lg-2">
                            @Html.LabelFor(HoraExtra => HoraExtra.SegundaSaida)
                            @Html.TextBoxFor(HoraExtra => HoraExtra.SegundaSaida, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <div class="row">

                        <div class="col-lg-2">
                            @Html.LabelFor(HoraExtra => HoraExtra.TotalDeMinutos)
                            @Html.TextBoxFor(HoraExtra => HoraExtra.TotalDeMinutos, new { @class = "form-control" })
                        </div>
                        
                    </div>
                    <br />
                    <div class="row">

                        <div class="col-lg-5">
                            @Html.LabelFor(HoraExtra => HoraExtra.Observacao)
                            @Html.TextAreaFor(HoraExtra => HoraExtra.Observacao, new { @class = "form-control" })
                        </div>

                    </div>
                    <br />
                    <div class="row">

                        <div class="col-lg-2">
                         <input type="submit" class="btn btn-primary" value="Cadastrar"/>
                        </div>

                    </div>



                </div>
            </div>
        </div>

    }














</body>